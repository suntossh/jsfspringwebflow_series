        <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" >
				<property name="url" value="jdbc:mysql://localhost:3306/ltrs_schema"/>
				<property name="username" value="ltrs_user"/>
				<property name="password" value="ltrs_password"/>
				<property name="driverClassName" value="com.mysql.jdbc.Driver"/>
		</bean>
        
        
        
